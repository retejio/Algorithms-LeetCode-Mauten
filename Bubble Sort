def bubble_sort(arr):

    n = len(arr) #длина массива

    #внешний цикл проходит по всему массиву
    for i in range(n):
        swapped = False  #менялись ли элементы в этом проходе
        
        for j in range(0, n - i - 1): #внутренний цикл сравнивает соседние элементы, последние i элементов уже отсортированы, поэтому сокращаем диапазон
           if arr[j] > arr[j + 1]:  #если текущий элемент больше следующего — меняем их местами
                arr[j], arr[j + 1] = arr[j + 1], arr[j]
                swapped = True  #фиксируем, что произошёл обмен

        #если за проход не было ни одного обмена то массив отсортирован, используем брэйк
        if not swapped:
            break

    return arr


data = [5, 2, 9, 1, 5, 6]
print("исходный массив:", data)  
sorted_data = bubble_sort(data.copy()) 
print("отсортированный массив:", sorted_data)  
